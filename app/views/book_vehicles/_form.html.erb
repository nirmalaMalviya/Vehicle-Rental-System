<%= form_for @book_vehicle, remote: true do |f| %>

  <% if @book_vehicle.errors.any? %> <ul> 
  <% @book_vehicle.errors.full_messages.each do |msg| %> 
  <li><%= msg %></li>
   <% end %> 
   </ul>
   <% end %>

  <div class="field">
    <%= f.label :address, "Address" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :v_cost, "Vehicle Cost" %>
    <%= f.text_field :v_cost %>
  </div>

  <div class="field">
    <%= f.label :user_id, "User ID" %>
    <%= f.text_field :user_id, :value=>current_user[:id] %>
  </div>

  <div class="field">
    <%= f.label :vehicle_id, "Vehicle ID" %>
    <%= f.text_field :vehicle_id %>
  </div>

  <div class="field">
    <%= f.label :date_of_booking, "Booking Date" %>
    <%= f.text_field :date_of_booking, class: 'datepicker'  %>
  </div>

  <div class="field">
    <%= f.label :date_of_release, "Leaving Date" %>
    <%= f.text_field :date_of_release, class: 'datepicker' %>
  </div>

  <div class="actions">
    <%= f.submit  %>
  </div>

<% end %>

