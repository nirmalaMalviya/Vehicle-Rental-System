<h1>Vehicle Index</h1>
<div>
  <%= link_to "Add New Vehicle", new_vehicle_path %>
</div>
<br/>
<div>
<table class="table table-hover">
	<thead>
		<tr>
		  <th>Name</th>
      <th>Type</th>
      <th>Vno.</th>
      <th>Cost</th>
      <th>Seater</th>
      <th>Fuel Type</th>
      <th>Image</th>
      </tr> 
	</thead>

	<tbody>
    <% @vehicles.each do |my_vehicle| %>
	    <tr>
        
		    <td><%= my_vehicle.name %></td>
		    <td><%= my_vehicle.vtype %></td>
		    <td><%= my_vehicle.vno %></td>
		    <td><%= my_vehicle.cost %></td>
		    <td><%= my_vehicle.seater %></td>
		    <td><%= my_vehicle.fueltype %></td>
		    <td><%= image_tag(my_vehicle.images.last.name ,size: "16x10")%></td>
		    <td><%= link_to 'Show', my_vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(my_vehicle) %></td>
        <td><%= link_to 'Destroy', my_vehicle, method: :DELETE, data: { confirm: 'Are you sure?' } %></td>
	    </tr>
	  <% end %>
	</tbody>
</table>
</div>


