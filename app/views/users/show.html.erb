<% byebug %>
<p>
  <strong>First Name</strong>
  <%= @user.first_name%>
</p>

<p>
  <strong>Last Name</strong>
  <%= @user.last_name%>
</p>

<p>
  <strong>Date of Birth</strong>
  <%= @user.dob%>
</p>

<p>
  <strong>Address</strong>
  <%= @user.address%>
</p>

<p>
  <strong>Email ID</strong>
  <%= @user.email%>
</p>

<p>
  <strong>Image</strong>
  <%= form_for(@user, url: add_showing_image_user_path(@user)) do |f| %>
  <li>
		<% @user.images.each do |image| %>
			<div>
				<%= f.radio_button :show_image, image.id %>
				<%= image_tag(image.name, size: "16x10")%>
			</div>
		<% end %>
  </li>

  <%= f.submit %>
<% end %>

<%#@images=Image.all.where(id: current_user[:id])%>

</p>